package assignment2_10513947;

/**
 *
 * @author Edwin Etornam
 */
public class CountingByHalves {
     public static void main(String[] args) {
        System.out.println("x");
        System.out.println("-----------");
        
        
        for (double x = -10; x <= 10; x=x+0.5) {
           
            System.out.println(x);
            
            
            }
            
        }
    
}
